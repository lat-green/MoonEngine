<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.greentree</groupId>
        <artifactId>greentree-root</artifactId>
        <version>0.0.4</version>
    </parent>

    <groupId>com.greentree.game</groupId>
    <artifactId>MoonDemo1</artifactId>
    <version>0.3.6</version>

    <name>MoonEngine Demo1</name>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.greentree.engine.moon</groupId>
                <artifactId>moon-engine-parent</artifactId>
                <version>0.3.6</version>
                <scope>import</scope>
                <type>pom</type>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <dependencies>
        <dependency>
            <groupId>com.greentree.engine.moon</groupId>
            <artifactId>cooker</artifactId>
        </dependency>
        <dependency>
            <groupId>com.greentree.engine.moon</groupId>
            <artifactId>debug</artifactId>
        </dependency>
        <dependency>
            <groupId>com.greentree.engine.moon</groupId>
            <artifactId>script</artifactId>
        </dependency>
        <dependency>
            <groupId>com.greentree.engine.moon</groupId>
            <artifactId>opengl</artifactId>
        </dependency>
        <dependency>
            <groupId>com.greentree.engine.moon</groupId>
            <artifactId>assimp</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>com.greentree.engine.moon</groupId>
                <artifactId>asset-compile-plugin</artifactId>
                <version>0.3.6</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>cook</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <assetDirectory>Assets</assetDirectory>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>